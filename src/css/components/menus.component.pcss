#accessabar .ab-menu {
    max-width: 100vw;
    max-height: 100vh;
    background: var(--near-white);
    border: 4px solid var(--border-grey);
    z-index: 2140000010;
    box-shadow: 0 2px 2px var(--shadow-grey);
    overflow: auto;

    .ab-menu-header {
        align-items: center;
        justify-content: space-between;
        padding: 0.15em;
        background: var(--bg-grey);
        font-size: 1rem;
        color: var(--alt-font-colour);
        font-family: var(--header-font);
        font-weight: 700;
        border-bottom: 1px solid var(--border-grey);
        text-shadow: 0 0 1px var(--near-white);

        @media (--for-tablet-landscape-up) {
            padding: 0 0.5em;
            font-size: 1.25rem;
        }

        &:hover {
            cursor: move;
        }

        .ab-menu-header-text {
            pointer-events: none;
            user-select: none;
        }

        .ab-menu-drag-handle {
            display: flex;
            align-items: center;
            flex-grow: 1;
            align-self: stretch;
        }

        .ab-menu-buttons-container{
            align-items: center;
            justify-content: space-between;
            padding: 0.5em;

            .ab-menu-help {
                margin: 0.1em;
                background: var(--near-black);
                color: var(--font-colour);
                padding: 0.25em;
                display: inline-flex;

                @media (--for-tablet-landscape-up) {
                    padding: 0.4em;
                    margin: 0.15em;
                }

                &:hover, &:focus {
                    background: var(--lighter-grey);
                    cursor: pointer;
                    outline: 2px solid var(--blue-focus);
                }
            }

            /* TODO: Make button object */

            .ab-menu-close {
                margin: 0.1em;
                background: var(--dark-red);
                color: var(--font-colour);
                padding: 0.25em;
                display: inline-flex;

                @media (--for-tablet-landscape-up) {
                    padding: 0.4em;
                    margin: 0.15em;
                }

                &:hover, &:focus {
                    background: var(--lighter-red);
                    cursor: pointer;
                    outline: 2px solid var(--blue-focus);
                }
            }

        }


    }
}

#accessabar .ab-menu-content {
    padding: 0.1em;
    display: flex;
    flex-direction: column;
    font-size: 1rem;

    @media (--for-tablet-landscape-up) {
        padding: 0.5em;
        font-size: 1.1rem;
    }
}

#accessabar .ab-menu-tabs {
    background: var(--light-grey);
    display: flex;

    .ab-menu-tab-button {
        margin: 0 0.1em;
        padding: 0.2em;
        text-align: center;
        display: flex;
        align-items: center;
        opacity: 0.8;
        transition: opacity 0.25s;
        font-weight: 500;

        @media (--for-tablet-landscape-up) {
            margin: 0 0.25em;
            padding: 0.5em;
            letter-spacing: 0.5px;
        }

        &.ab-active {
            opacity: 1;
            border-bottom: 2px solid var(--light-purple);
        }

        &:focus {
            background: var(--light-grey);
            outline: none;
        }

        &:hover, &:focus {
            cursor: pointer;
            opacity: 1;
            border-bottom: 2px solid var(--light-purple);
        }
    }
}
