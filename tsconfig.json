{
    "compilerOptions": {
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "noEmitOnError": true,
        "declaration": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "noUnusedLocals": true,
        "sourceMap": true,
        "strict": true,
        "removeComments": false,
        "moduleResolution": "node",
        "pretty": true,
        "experimentalDecorators": true,

        "outDir": "./public/dist/accessangel/",
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "es2018",
            "dom"
        ],
        "types": ["cypress"]
    },
    "include": [
        "./src/**/*",
        "node_modules/@webcomponents/custom-elements/src/Externs.d.ts"
    ],
    "exclude": [
		"node_modules"
	]
}
